      "/auth/register": {
        "post": {
          "description": "Create an account",
          "tags": ["Authentification"],
          "parameters": [
            {
              "name": "username",
              "in": "body",
              "schema": {
                "type": "string"
              },
              "required": true
            },
            {
              "name": "email",
              "in": "body",
              "schema": {
                "type": "string"
              },
              "required": true
            },
            {
              "name": "password",
              "in": "body",
              "schema": {
                "type": "string"
              },
              "required": true
            }
          ]
        }
      },
      "/auth/login": {
        "post": {
          "description": "Login to the application",
          "tags": ["Authentification"]
        }
      }
    },
    "securityDefinitions": {
      "JwtAuth": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "apis": ["./routes/*.js"]
}